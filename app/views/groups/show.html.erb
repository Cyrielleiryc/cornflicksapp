<div class="banner group-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @group.image.url %>)">
  <div class="contenu">
    <h1><%= @group.name %></h1>
    <% @group.users.all.each do |user| %>
      <%= user_avatar(user.username) %>
    <% end %>
    <%# bouton pour inviter Ã  rejoindre le groupe %>
  </div>
</div>
<div class="contenu">
  <% @recommendations.each do |reco| %>
    <%= reco.user.username %>
    <%= reco.title %>
    <%= reco.comment %>
  <% end %>

<h3 class="mt-5">Quitter ce groupe</h3>
<%= link_to "Quitter ce groupe", subscription_path(Subscription.find_by(user: current_user, group: @group)), data: { turbo_method: :delete, turbo_confirm: "Confirmez-vous vouloir quitter le groupe #{@group.name} ?"} %>
</div>
